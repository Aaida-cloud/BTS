<h1 class="text-center my-4">Admin Dashboard</h1>

<div class="container">
  <table class="table table-bordered table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>User Type</th>
        <th>Enable/Disable</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <%= form_with url: update_user_type_admin_user_path(user), method: :patch, local: true do |f| %>
              <div class="form-group">
                <%= f.select :user_type, User.user_types.keys, { selected: user.user_type }, class: "form-control" %>
              </div>
              <%= f.submit "Update User Type", class: "btn btn-primary btn-sm" %>
            <% end %>
          </td>
          <td>
            <%= form_with url: toggle_user_admin_path(user), method: :patch, local: true do |f| %>
              <%= f.submit user.enabled? ? "Disable" : "Enable", class: "btn btn-#{user.enabled? ? 'danger' : 'success'} btn-sm", data: { confirm: "Are you sure?" } %>
            <% end %>
          </td>
          <td>
            <!-- Add any other actions you want here -->
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
