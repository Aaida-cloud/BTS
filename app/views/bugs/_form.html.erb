<%= form_with(model: [@project, @bug], local: true, html: { class: "form" }) do |form| %>
  <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :bug_type, class: "form-label" %>
    <%= form.select :bug_type, ['feature', 'bug'], { prompt: 'Select Type' }, class: "form-select", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :status, class: "form-label" %>
    <%= form.select :status, Bug.statuses.keys, { prompt: 'Select Status' }, class: "form-select", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 3 %>
  </div>

  <div class="form-group">
    <%= form.label :deadline, class: "form-label" %>
    <%= form.date_select :deadline, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :screenshot, class: "form-label" %>
    <%= form.file_field :screenshot ,accept: ".png,.gif", class: "form-control" %>
  </div>

  <div class="form-group mt-4">
    <%= form.submit 'Create Bug', class: "btn btn-success" %>
  </div>
<% end %>
