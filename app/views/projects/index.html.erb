<div class="container mt-5">
  <h2 class="text-center text-primary mb-4">Your Projects</h2>

  <div class="d-flex justify-content-end mb-4">
    <%= link_to 'New Project', new_project_path, class: "btn btn-primary btn-sm" %>
  </div>

  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-md-4">
        <div class="card shadow-lg border-0 mb-4">
          <div class="card-body">
            <h5 class="card-title text-dark"><%= project.name %></h5>
            <p class="text-muted"><%= project.description.truncate(100) %></p>
            <p class="small text-secondary">Number of Bugs: <%= project.bugs.count %></p>
            <p class="small text-secondary">Deadline: <%= project.deadline %></p>

            <div class="d-flex justify-content-between mt-3">
              <%= link_to 'View Bugs', project_path(project), class: "btn btn-outline-primary btn-sm" %>
              <%= link_to 'Edit', edit_project_path(project), class: "btn btn-outline-warning btn-sm" %>
              <%= link_to 'Delete', project_path(project), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %>
            </div>


            <div class="mt-4">
              <h5 class="text-center text-primary">Assign Team Members</h5>
              <%= form_with(url: assign_users_project_path(project), method: :post, class: "d-flex justify-content-center") do %>
                <%= select_tag :user_id, options_from_collection_for_select(User.not_admin_and_manager, :id, :name), prompt: "Select a user", class: "form-select w-20 small text-primary" %>
                <%= submit_tag "Assign", class: "btn btn-outline-success ms-3 btn-sm" %>
              <% end %>
            </div>


            <div class="mt-4">
              <h5 class="text-center text-primary">Team Members</h5>
              <ul class="list-group">
                <% project.users.each do |user| %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= user.name %>
                    <%= button_to 'Remove', remove_user_project_path(project, user_id: user.id), method: :post, class: "btn btn-outline-danger btn-sm" %>
                  </li>
                <% end %>
              </ul>
            </div>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="d-flex justify-content-center mt-4">
  <%= paginate @projects %>
</div>
