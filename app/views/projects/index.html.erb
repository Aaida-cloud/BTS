<div class="container mt-5">
  <h2 class="text-center text-primary">Your Projects</h2>

  <div class="d-flex justify-content-end mb-3">
    <%= link_to 'New Project', new_project_path, class: "btn btn-outline-primary" %>
  </div>

  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-md-4">
        <div class="card shadow-sm mb-4 border-0">
          <div class="card-body">
            <h5 class="card-title text-dark"><%= project.name %></h5>
            <p class="text-muted"><%= project.description.truncate(100) %></p>
            <p class="small text-secondary">Number of Bugs: <%= project.bugs.count %></p>
            <p class="small text-secondary">Deadline: <%= project.deadline %></p>

            <div class="d-flex justify-content-between">
              <%= link_to 'View Bugs', project_path(project), class: "btn btn-outline-primary btn-sm" %>
              <%= link_to 'Edit', edit_project_path(project), class: "btn btn-outline-primary btn-sm" %>
              <%= link_to 'Delete', project_path(project), data: { turbo_method: :delete,turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %>
            </div>
          </div>
        </div>

        <div class="mt-5">
          <h3 class="text-center text-primary fs-5">Assign Team Members</h3>
          <%= form_with(url: assign_users_project_path(project), method: :post, class: "d-flex justify-content-center") do %>
            <%= select_tag :user_id, options_from_collection_for_select(User.where.not(id: project.user_ids), :id, :name), prompt: "Select a user", class: "form-select w-50 small text-primary" %>
            <%= submit_tag "Assign", class: "btn btn-outline-success ms-3 btn-sm" %>
          <% end %>
        </div>

        <div class="mt-5">
          <h3 class="text-center text-primary fs-5">Team Members</h3>
          <ul class="list-group small text-primary">
            <% project.users.each do |user| %>
              <li class="list-group-item small"><%= user.name %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>
