<div class="container mt-5">
  <h2 class="text-center text-primary">Welcome to Your Dashboard</h2>

  <div class="d-flex justify-content-end mb-3">
    <%= link_to 'Create New Project', new_manager_project_path, class: "btn btn-success" %>
  </div>

  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-md-4">
        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <h5 class="card-title text-dark"><%= project.name %></h5>
            <p class="text-muted"><%= project.description.truncate(100) %></p>
            <p class="small text-secondary">Deadline: <%= project.deadline %></p>
            <%= link_to 'View', manager_project_path(project), class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
