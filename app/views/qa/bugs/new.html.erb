<div class="container mt-5">
  <h2 class="text-center text-primary mb-4">Report a New Bug for <%= @project.name %></h2>

  <div class="card shadow-lg border-0">
    <div class="card-body">
      <%= form_with(model: [@project, @bug], local: true) do |f| %>
        <div class="form-group">
          <%= f.label :title, "Bug Title" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group mt-3">
          <%= f.label :description, "Bug Description" %>
          <%= f.text_area :description, class: "form-control" %>
        </div>

        <div class="form-group mt-3">
          <%= f.label :bug_type %>
          <%= f.select :bug_type, options_for_select([['Feature', 0], ['Bug', 1]]), {}, class: "form-control" %>
        </div>

        <div class="form-group mt-3">
          <%= f.label :status %>
          <%= f.select :status, options_for_select([['New', 0], ['Started', 1], ['Resolved', 3]]), {}, class: "form-control" %>
        </div>

        <div class="form-group mt-3">
          <%= f.label :deadline %>
          <%= f.date_select :deadline, {}, class: "form-control" %>
        </div>

        <div class="form-group mt-3">
          <%= f.label :screenshot, "Upload Screenshot (Optional)" %>
          <%= f.file_field :screenshot, class: "form-control" %>
        </div>

        <div class="form-group mt-3">
          <%= f.submit "Report Bug", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-4 d-flex justify-content-start">
    <%= link_to 'Back to Project', qa_project_path(@project), class: "btn btn-outline-secondary btn-sm" %>
  </div>
</div>
