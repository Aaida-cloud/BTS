<div class="container mt-5">
  <h2 class="text-center text-primary mb-4"><%= @project.name %></h2>

  <div class="card shadow-lg border-0">
    <div class="card-body">
      <h4 class="card-title">Description</h4>
      <p class="card-text"><%= @project.description %></p>

      <h4 class="mt-4">Assigned Bugs</h4>
      <% if @bugs.any? %>
        <ul class="list-group">
          <% @bugs.each do |bug| %>
            <li class="list-group-item">
              <strong><%= bug.title %></strong> - <%= bug.status.capitalize %>
              <% if current_user.manager? %>
                <%= link_to 'Assign to Me', assign_bug_to_me_project_path(@project, bug), method: :post, class: "btn btn-outline-primary btn-sm ms-2" %>
                <%= link_to 'Unassign', unassign_bug_project_path(@project, bug), method: :delete, class: "btn btn-outline-danger btn-sm ms-2" %>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>No bugs assigned to this project yet.</p>
      <% end %>
    </div>
  </div>

  <div class="mt-4 d-flex justify-content-start">
    <%= link_to 'Back to Projects', developer_projects_path, class: "btn btn-outline-secondary btn-sm" %>
  </div>
</div>
